                @Html.DisplayNameFor(model => model.Income[0].Rate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Income[0].Amount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Income.Where(income => income.Type() == "Expense"))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td>Annual Expenses:</td>
            <td></td>
            <td>
                @Html.DisplayFor(modelItem => Model.Expense_Total)
            </td>

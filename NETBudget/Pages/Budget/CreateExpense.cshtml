@page
@model NETBudget.Pages.Budget.CreateExpenseModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Expense</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Income.Title" class="control-label"></label>
                <input asp-for="Income.Title" class="form-control" />
                <span asp-validation-for="Income.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Income.Rate" class="control-label"></label>
                <select asp-for="Income.Rate" class="form-control" 
                        asp-items="@(Model.RateList())">
                </select>
                <span asp-validation-for="Income.Rate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Income.Amount" class="control-label"></label>
                <input asp-for="Income.Amount" class="form-control"/>
                <span asp-validation-for="Income.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
